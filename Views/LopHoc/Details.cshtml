@model GPLX.Models.LopHoc

@{
    ViewData["Title"] = "Chi tiết lớp học";
}

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 800px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-building-check me-2 text-primary"></i> Thông Tin Chi Tiết Lớp Học
        </h2>

        <table class="table table-bordered table-striped shadow-sm rounded-3">
            <tbody>
                <tr>
                    <th class="col-sm-4 text-nowrap">Mã lớp</th>
                    <td>@Model.MaLop</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Ngày bắt đầu</th>
                    <td>@Model.NgayBatDau.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Ngày kết thúc</th>
                    <td>@Model.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Địa điểm</th>
                    <td>@Model.DiaDiem</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Thời gian học trong tuần</th>
                    <td>@Model.ThoiGianHocTrongTuan</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Số lượng tối đa</th>
                    <td>@Model.SoLuongToiDa</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Ghi chú</th>
                    <td>@Model.GhiChu</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Trạng thái</th>
                    <td>@Model.TrangThai</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Hình thức học</th>
                    <td>@((Model.IsOnline.HasValue && Model.IsOnline.Value) ? "Online" : "Offline")</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Giảng viên</th>
                    <td>@Model.MaGvNavigation?.HoTen</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Khóa học</th>
                    <td>@Model.MaKhoaHocNavigation?.TenKhoaHoc</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Edit", new { id = Model.MaLop })" class="btn btn-warning px-4 py-2 rounded-3 shadow-sm me-2">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index", "LopHoc")" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<!-- Hiệu ứng CSS -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    table td, table th {
        vertical-align: middle;
    }
</style>
