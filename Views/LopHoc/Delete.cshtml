@model GPLX.Models.LopHoc

@{
    ViewData["Title"] = "Xóa lớp học";
}

<h1>@ViewData["Title"]</h1>

<p>Bạn có chắc chắn muốn xóa lớp học <strong>@Model.MaLop</strong>?</p>

<form method="post">
    <input type="hidden" name="id" value="@Model.MaLop" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("Index", "LopHoc")" class="btn btn-secondary">Hủy</a>
</form>
