@{
    ViewData["Title"] = "Thêm lớp học";
}

<h2>@ViewData["Title"]</h2>

<!-- Hiển thị lỗi nếu ModelState không hợp lệ -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form id="createForm" method="post">
    <div class="form-group">
        <label for="NgayBatDau">Ngày bắt đầu</label>
        <input type="date" class="form-control" id="NgayBatDau" name="NgayBatDau" required />
    </div>

    <div class="form-group">
        <label for="NgayKetThuc">Ngày kết thúc</label>
        <input type="date" class="form-control" id="NgayKetThuc" name="NgayKetThuc" required />
    </div>

    <div class="form-group">
        <label for="DiaDiem">Địa điểm</label>
        <input type="text" class="form-control" id="DiaDiem" name="DiaDiem" />
    </div>

    <div class="form-group">
        <label for="ThoiGianHocTrongTuan">Thời gian học trong tuần</label>
        <input type="text" class="form-control" id="ThoiGianHocTrongTuan" name="ThoiGianHocTrongTuan" />
    </div>

    <div class="form-group">
        <label for="SoLuongToiDa">Số lượng tối đa</label>
        <input type="number" class="form-control" id="SoLuongToiDa" name="SoLuongToiDa" />
    </div>

    <div class="form-group">
        <label for="GhiChu">Ghi chú</label>
        <input type="text" class="form-control" id="GhiChu" name="GhiChu" />
    </div>

    <div class="form-group">
        <label for="TrangThai">Trạng thái</label>
        <select class="form-control" id="TrangThai" name="TrangThai">
            <option value="Đang mở">Đang mở</option>
            <option value="Đã đóng">Đã đóng</option>
            <option value="Đã huỷ">Đã huỷ</option>
        </select>
    </div>

    <div class="form-group">
        <label for="HinhThucHoc">Hình thức học</label>
        <select class="form-control" id="HinhThucHoc" name="IsOnline">
            <option value="true">Online</option>
            <option value="false">Offline</option>
        </select>
    </div>

   <div class="form-group">
    <label for="MaGv">Giảng viên</label>
    <select class="form-control" id="MaGv" name="MaGv">
        @if (ViewData["GiangVien"] is List<GPLX.Models.GiangVien> giangVienList)
        {
            foreach (var gv in giangVienList)
            {
                <option value="@gv.MaGv">@gv.HoTen</option>
            }
        }
    </select>
</div>

<div class="form-group">
    <label for="MaKhoaHoc">Khóa học</label>
    <select class="form-control" id="MaKhoaHoc" name="MaKhoaHoc">
        @if (ViewData["KhoaHoc"] is List<GPLX.Models.KhoaHoc> khoaHocList)
        {
            foreach (var kh in khoaHocList)
            {
                <option value="@kh.MaKhoaHoc">@kh.TenKhoaHoc</option>
            }
        }
    </select>
</div>


    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="@Url.Action("Index", "LopHoc")" class="btn btn-secondary">Hủy</a>
</form>

<!-- JavaScript to handle form submission without reloading the page -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#createForm").submit(function (event) {
            event.preventDefault(); // Ngăn trang reload

            var formData = $(this).serialize(); // Lấy dữ liệu từ form

            $.ajax({
                type: "POST",
                url: "/LopHoc/Create", // URL gửi request đến
                data: formData,
                success: function (response) {
                    alert("Thêm lớp học thành công!");
                    window.location.href = "/LopHoc/Index"; // Chuyển hướng đến trang index
                },
                error: function () {
                    alert("Có lỗi xảy ra!");
                }
            });
        });
    });
</script>
