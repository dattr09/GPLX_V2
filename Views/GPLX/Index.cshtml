<form asp-action="CreateAutoGplx" method="post">
    <button type="submit" class="btn btn-success">Cấp GPLX Tự Động</button>
</form>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>Mã GPLX</th>
            <th>📅 Ngày Cấp</th>
            <th>⏳ Ngày Hết Hạn</th>
            <th>✅ Kết Quả Thi</th>
            <th>🛠 Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaGplx</td>
                <td>@item.NgayCap.ToString("dd/MM/yyyy")</td>
                <td>@item.NgayHetHan.ToString("dd/MM/yyyy")</td>
                <td class="text-center">
                    <a href="@Url.Action("Details", "KetQuaThiGplx", new { id = item.MaKetQua })" class="btn btn-info btn-sm">
                        📄 Xem Kết Quả
                    </a>
                </td>
                <td class="text-center">
                    <form asp-action="DeleteConfirmed" asp-controller="GPLX" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.MaGplx" />
                        <button type="submit" class="btn btn-danger">🗑 Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
