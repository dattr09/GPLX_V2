@model GPLX.Models.DangKyKhoaHoc

@{
    ViewData["Title"] = "Chi tiết đăng ký khóa học";
}

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 800px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-journal-check me-2 text-success"></i> Thông Tin Chi Tiết Đăng Ký Khóa Học
        </h2>

        <table class="table table-bordered table-striped shadow-sm rounded-3">
            <tbody>
                <tr>
                    <th class="col-sm-4 text-nowrap">Mã đăng ký</th>
                    <td>@Model.MaDkkh</td>
                </tr>
                <tr>
                    <th class="text-nowrap">CCCD</th>
                    <td>@Model.Cccd</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Tên lớp</th>
                    <td>@(Model.MaLopNavigation?.DiaDiem ?? "Không xác định")</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Ngày đăng ký</th>
                    <td>@Model.NgayDangKy.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Trạng thái</th>
                    <td>
                        <span class="badge @(Model.TrangThaiDangKy == "Đã duyệt" ? "bg-success" : "bg-warning") px-3 py-2">
                            @Model.TrangThaiDangKy
                        </span>
                    </td>
                </tr>
                <tr>
                    <th class="text-nowrap">Ghi chú</th>
                    <td>@Model.GhiChu</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Edit", new { id = Model.MaDkkh })" class="btn btn-warning px-4 py-2 rounded-3 shadow-sm me-2">
                <i class="bi bi-pencil-fill"></i> Cập Nhật
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<!-- Hiệu ứng CSS -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    table td, table th {
        vertical-align: middle;
    }
</style>
