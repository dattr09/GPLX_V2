@model GPLX.Models.LoaiGplx

@{
    ViewData["Title"] = "Chi tiết loại GPLX";
}

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 800px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-card-list me-2 text-success"></i> Thông Tin Chi Tiết Loại GPLX
        </h2>

        <table class="table table-bordered table-striped shadow-sm rounded-3">
            <tbody>
                <tr>
                    <th class="col-sm-4 text-nowrap"><i class="bi bi-hash"></i> Mã Loại</th>
                    <td>@Model.MaLoai</td>
                </tr>
                <tr>
                    <th class="text-nowrap"><i class="bi bi-file-text"></i> Tên Loại</th>
                    <td>@Model.TenLoai</td>
                </tr>
                <tr>
                    <th class="text-nowrap"><i class="bi bi-info-circle"></i> Mô Tả</th>
                    <td>@(string.IsNullOrEmpty(Model.MoTa) ? "Không có mô tả" : Model.MoTa)</td>
                </tr>
                <tr>
                    <th class="text-nowrap"><i class="bi bi-person-check"></i> Độ Tuổi Được Cấp</th>
                    <td>@Model.DoTuoiDuocCap</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Edit", new { id = Model.MaLoai })" class="btn btn-warning px-4 py-2 rounded-3 shadow-sm me-2">
                <i class="bi bi-pencil-fill"></i> Cập Nhật
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<!-- Hiệu ứng CSS -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    table td, table th {
        vertical-align: middle;
    }
</style>
