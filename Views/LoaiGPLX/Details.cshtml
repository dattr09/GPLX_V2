@model GPLX.Models.LoaiGplx
@{
    ViewData["Title"] = "Chi tiết loại GPLX";
}
<h1 class="text-primary"><i class="bi bi-card-list"></i> @ViewData["Title"]</h1>
<hr />

<div class="card shadow-sm p-4">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="bg-light w-25"><i class="bi bi-hash"></i> Mã Loại</th>
                <td>@Model.MaLoai</td>
            </tr>
            <tr>
                <th class="bg-light"><i class="bi bi-file-text"></i> Tên Loại</th>
                <td>@Model.TenLoai</td>
            </tr>
            <tr>
                <th class="bg-light"><i class="bi bi-info-circle"></i> Mô Tả</th>
                <td>@(string.IsNullOrEmpty(Model.MoTa) ? "Không có mô tả" : Model.MoTa)</td>
            </tr>
            <tr>
                <th class="bg-light"><i class="bi bi-person-check"></i> Độ Tuổi Được Cấp</th>
                <td>@Model.DoTuoiDuocCap</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.MaLoai" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>
