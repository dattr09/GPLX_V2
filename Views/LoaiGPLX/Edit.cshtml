@model GPLX.Models.LoaiGplx
@{
    ViewData["Title"] = "Chỉnh sửa loại GPLX";
}
<h1 class="text-primary"><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h1>
<hr />

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 650px;">
        <form asp-action="Edit">
            <input type="hidden" asp-for="MaLoai" />

            <!-- Tên Loại -->
            <div class="form-group mb-3">
                <label asp-for="TenLoai" class="form-label fw-bold">Tên Loại</label>
                <input asp-for="TenLoai" class="form-control border-primary shadow-sm input-3d" placeholder="Nhập tên loại GPLX" required />
                <span asp-validation-for="TenLoai" class="text-danger"></span>
            </div>

            <!-- Mô Tả -->
            <div class="form-group mb-3">
                <label asp-for="MoTa" class="form-label fw-bold">Mô Tả</label>
                <textarea asp-for="MoTa" class="form-control border-primary shadow-sm input-3d" rows="3" placeholder="Nhập mô tả (nếu có)"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <!-- Độ Tuổi Được Cấp -->
            <div class="form-group mb-3">
                <label asp-for="DoTuoiDuocCap" class="form-label fw-bold">Độ Tuổi Được Cấp</label>
                <input asp-for="DoTuoiDuocCap" class="form-control border-primary shadow-sm input-3d" type="number" min="18" max="100" required />
                <span asp-validation-for="DoTuoiDuocCap" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="text-center">
                <button type="submit" class="btn text-white btn-lg px-4 py-2 rounded-3 shadow-sm"
                        style="background: linear-gradient(to right, #4facfe, #00f2fe); border: none;">
                    <i class="bi bi-check-circle me-1"></i> Lưu thay đổi
                </button>

                <a asp-action="Index" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm ms-2">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<!-- CSS hiệu ứng đẹp -->
<style>
    .input-3d {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
    }

    .input-3d:focus {
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    label {
        font-weight: 600;
    }
</style>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
