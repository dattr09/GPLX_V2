@model GPLX.Models.KhoaHoc

@{
    ViewData["Title"] = "Thêm khóa học";
}

<!-- Thông báo -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 650px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-journal-plus me-2 fs-3 text-success"></i> Thêm Khóa Học Mới
        </h2>

        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="TenKhoaHoc" class="form-label fw-semibold">Tên khóa học</label>
                <input asp-for="TenKhoaHoc" class="form-control" required />
                <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ThoiGianHoc" class="form-label fw-semibold">Thời gian học</label>
                <input asp-for="ThoiGianHoc" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="HocPhi" class="form-label fw-semibold">Học phí</label>
                <input asp-for="HocPhi" type="number" class="form-control" required />
                <span asp-validation-for="HocPhi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label fw-semibold">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="MaLoai" class="form-label fw-semibold">Loại GPLX</label>
                <select asp-for="MaLoai" asp-items="ViewBag.MaLoai" class="form-select">
                    <option value="">-- Chọn loại GPLX --</option>
                </select>
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-gradient px-4 py-2 rounded-3 text-white shadow-sm"
                        style="background: linear-gradient(to right, #00c6ff, #0072ff); border: none;">
                    <i class="bi bi-check-circle me-1"></i> Lưu
                </button>
                <a href="@Url.Action("Index", "KhoaHoc")" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm">
                    <i class="bi bi-x-circle me-1"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: floatIn 0.6s ease-out;
    }

    @@keyframes floatIn {
        0% {
            transform: translateY(20px);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .glass-card input:focus,
    .glass-card textarea:focus,
    .glass-card select:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        transition: all 0.3s;
    }

    body {
        background: linear-gradient(135deg, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    label {
        color: #333;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />