@model GPLX.Models.KhoaHoc

@{
    ViewData["Title"] = "Thêm khóa học";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="TenKhoaHoc">Tên khóa học</label>
        <input asp-for="TenKhoaHoc" class="form-control" required />
        <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ThoiGianHoc">Thời gian học</label>
        <input asp-for="ThoiGianHoc" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HocPhi">Học phí</label>
        <input asp-for="HocPhi" type="number" class="form-control" required />
        <span asp-validation-for="HocPhi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="MaLoai">Loại GPLX</label>
        <select asp-for="MaLoai" asp-items="ViewBag.MaLoai" class="form-control">
            <option value="">-- Chọn loại GPLX --</option>
        </select>
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="@Url.Action("Index", "KhoaHoc")" class="btn btn-secondary">Hủy</a>
</form>