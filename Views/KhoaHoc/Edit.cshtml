@model GPLX.Models.KhoaHoc

@{
    ViewData["Title"] = "Chỉnh sửa khóa học";
}

<!-- Thông báo Success -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Thông báo Error -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 650px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-pencil-square me-2 text-primary"></i> Chỉnh sửa Thông Tin Khóa Học
        </h2>

        <form asp-action="Edit">
            <input type="hidden" asp-for="MaKhoaHoc" />

            <div class="form-group mb-3">
                <label for="TenKhoaHoc" class="form-label fw-bold">Tên khóa học</label>
                <input asp-for="TenKhoaHoc" class="form-control border-primary shadow-sm input-3d" required placeholder="Nhập tên khóa học" />
                <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="ThoiGianHoc" class="form-label fw-bold">Thời gian học</label>
                <input asp-for="ThoiGianHoc" class="form-control border-primary shadow-sm input-3d" required placeholder="VD: 3 tháng" />
                <span asp-validation-for="ThoiGianHoc" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="HocPhi" class="form-label fw-bold">Học phí</label>
                <input asp-for="HocPhi" class="form-control border-primary shadow-sm input-3d" type="number" step="1000" min="0" required placeholder="Nhập số tiền học phí" />
                <span asp-validation-for="HocPhi" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="MoTa" class="form-label fw-bold">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control border-primary shadow-sm input-3d" placeholder="Mô tả ngắn gọn về khóa học"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label for="MaLoai" class="form-label fw-bold">Loại giấy phép</label>
                <select asp-for="MaLoai" class="form-control border-primary shadow-sm input-3d" asp-items="ViewBag.MaLoai"></select>
                <span asp-validation-for="MaLoai" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn text-white btn-lg px-4 py-2 rounded-3 shadow-sm"
                        style="background: linear-gradient(to right, #2193b0, #6dd5ed); border: none;">
                    <i class="bi bi-check-circle me-1"></i> Cập nhật
                </button>

                <a asp-action="Index" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .input-3d {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
    }

    .input-3d:focus {
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    label {
        font-weight: 600;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
