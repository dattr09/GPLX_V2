@model GPLX.Models.CongDan

@{
    ViewData["Title"] = "Thêm Công Dân";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 rounded-3">
        <h1 class="text-primary text-center"><i class="bi bi-person-plus"></i> Thêm Công Dân Mới</h1>
        <hr />

        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Cccd" class="form-label fw-bold"></label>
                        <input asp-for="Cccd" class="form-control shadow-sm" maxlength="12" required />
                        <span asp-validation-for="Cccd" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="HoTen" class="form-label fw-bold"></label>
                        <input asp-for="HoTen" class="form-control shadow-sm" maxlength="50" required />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="NgaySinh" class="form-label fw-bold"></label>
                        <input asp-for="NgaySinh" type="date" class="form-control shadow-sm" required />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Giới Tính</label>
                        <select asp-for="GioiTinh" class="form-control shadow-sm">
                            <option value="true">Nam</option>
                            <option value="false">Nữ</option>
                        </select>
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="QuocTich" class="form-label fw-bold"></label>
                        <input asp-for="QuocTich" class="form-control shadow-sm" maxlength="30" required />
                        <span asp-validation-for="QuocTich" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DiaChi" class="form-label fw-bold"></label>
                        <input asp-for="DiaChi" class="form-control shadow-sm" maxlength="100" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SoDienThoai" class="form-label fw-bold"></label>
                        <input asp-for="SoDienThoai" class="form-control shadow-sm" maxlength="10" />
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary btn-lg shadow-sm px-4 rounded-3"
                        style="background: linear-gradient(145deg, #0d6efd, #0a58ca); border: none; box-shadow: 3px 3px 6px #aaa;">
                    <i class="bi bi-check-circle"></i> Thêm Mới
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg shadow-sm px-4 rounded-3"
                   style="background: linear-gradient(145deg, #f0f0f0, #d6d6d6); border: none; box-shadow: 3px 3px 6px #aaa;">
                    <i class="bi bi-arrow-left-circle"></i> Quay Về
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}