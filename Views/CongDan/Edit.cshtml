@model GPLX.Models.CongDan

@{
    ViewData["Title"] = "Chỉnh sửa Công Dân";
}

<!-- Thông báo Success -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Thông báo Error -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 650px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-pencil-square me-2 text-warning"></i> Chỉnh sửa Thông Tin Công Dân
        </h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Cccd" />

            <div class="row">
                <!-- Cột trái -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="HoTen" class="form-label fw-bold">Họ và Tên</label>
                        <input asp-for="HoTen" class="form-control border-success shadow-sm input-3d" required maxlength="50" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="NgaySinh" class="form-label fw-bold">Ngày, tháng, năm sinh</label>
                        <input asp-for="NgaySinh" type="date" class="form-control border-success shadow-sm input-3d" required />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Giới tính</label>
                        <select asp-for="GioiTinh" class="form-control border-success shadow-sm input-3d">
                            <option value="true" selected="@(Model.GioiTinh == true ? "selected" : null)">Nam</option>
                            <option value="false" selected="@(Model.GioiTinh == false ? "selected" : null)">Nữ</option>
                        </select>
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                    </div>
                </div>

                <!-- Cột phải -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label for="QuocTich" class="form-label fw-bold">Quốc tịch</label>
                        <input asp-for="QuocTich" class="form-control border-success shadow-sm input-3d" required maxlength="30" />
                        <span asp-validation-for="QuocTich" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="DiaChi" class="form-label fw-bold">Địa chỉ</label>
                        <input asp-for="DiaChi" class="form-control border-success shadow-sm input-3d" maxlength="100" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label for="SoDienThoai" class="form-label fw-bold">Số điện thoại</label>
                        <input asp-for="SoDienThoai" class="form-control border-success shadow-sm input-3d" maxlength="10" />
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn text-white btn-lg px-4 py-2 rounded-3 shadow-sm"
                    style="background: linear-gradient(to right, #00b09b, #96c93d); border: none;">
                    <i class="bi bi-check-circle me-1"></i> Lưu Thay Đổi
                </button>

                <a href="@Url.Action("Index")" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm">
                    <i class="bi bi-arrow-left-circle"></i> Quay Về
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Hiệu ứng CSS -->
<style>
    .input-3d {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
    }

    .input-3d:focus {
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .btn-3d {
        background: linear-gradient(145deg, #6ec6ff, #4096ee);
        border: none;
        box-shadow: 3px 3px 6px #aaa;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-3d:hover {
        transform: translateY(-5px);
        box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #ffffff, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    label {
        font-weight: 600;
    }
</style>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />