@model GPLX.Models.GiangVien

@{
    ViewData["Title"] = "Xóa giảng viên";
}

<h1>@ViewData["Title"]</h1>

<p>Bạn có chắc chắn muốn xóa giảng viên <strong>@Model.HoTen</strong>?</p>

<form method="post">
    <input type="hidden" name="id" value="@Model.MaGv" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("Index", "GiangVien")" class="btn btn-secondary">Hủy</a>
</form>
