@model GPLX.Models.GiangVien

@{
    ViewData["Title"] = "Sửa giảng viên";
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    label {
        font-weight: 600;
    }
</style>

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 650px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-pencil-square me-2 text-warning"></i> Sửa Giảng Viên
        </h2>

        <form asp-action="Edit" asp-route-id="@Model.MaGv">
            <div class="mb-3">
                <label for="MaGv">Mã giảng viên</label>
                <input type="text" class="form-control" id="MaGv" name="MaGv" value="@Model.MaGv" readonly />
            </div>

            <div class="mb-3">
                <label for="HoTen">Họ và tên</label>
                <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.HoTen" required />
            </div>

            <div class="mb-3">
                <label for="NgaySinh">Ngày sinh</label>
                <input type="date" class="form-control" id="NgaySinh" name="NgaySinh"
                       value="@Model.NgaySinh?.ToString("yyyy-MM-dd")" />
            </div>

            <div class="mb-3">
                <label for="GioiTinh">Giới tính</label>
                <select class="form-select" id="GioiTinh" name="GioiTinh">
                    <option value="true" selected="@(Model.GioiTinh == true ? "selected" : null)">Nam</option>
                    <option value="false" selected="@(Model.GioiTinh == false ? "selected" : null)">Nữ</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="Sdt">Số điện thoại</label>
                <input type="text" class="form-control" id="Sdt" name="Sdt" value="@Model.Sdt" />
            </div>

            <div class="mb-4">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn text-white px-4 py-2 rounded-3 shadow-sm"
                        style="background: linear-gradient(to right, #00b09b, #96c93d); border: none;">
                    <i class="bi bi-check-circle me-1"></i> Cập nhật
                </button>

                <a href="@Url.Action("Index", "GiangVien")" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm">
                    <i class="bi bi-x-circle me-1"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons (nếu chưa có) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
