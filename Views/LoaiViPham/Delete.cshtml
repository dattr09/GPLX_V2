@model GPLX.Models.LoaiViPham

@{
    ViewData["Title"] = "Xóa Loại Vi Phạm";
}

<style>
    .delete-card {
        background: #fff;
        border: 1px solid #f5c6cb;
        border-left: 6px solid #dc3545;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
        border-radius: 1rem;
        animation: fadeIn 0.5s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: #fff6f6;
        font-family: 'Segoe UI', sans-serif;
    }

    .btn-danger {
        background: linear-gradient(to right, #dc3545, #ff6b6b);
        border: none;
    }

    .btn-danger:hover {
        background: #c82333;
    }

    .btn-outline-secondary {
        background: linear-gradient(145deg, #e0e0e0, #cfcfcf);
        border: none;
        color: #333;
    }

    .btn-outline-secondary:hover {
        background: #d6d6d6;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .info-label {
        font-weight: bold;
    }
</style>

<div class="container mt-5">
    <div class="delete-card p-5 mx-auto" style="max-width: 600px;">
        <h2 class="text-danger text-center mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> Xóa Loại Vi Phạm
        </h2>

        <div class="alert alert-warning d-flex align-items-center">
            <i class="bi bi-exclamation-circle-fill me-2"></i>
            <div>
                Bạn có chắc chắn muốn xóa loại vi phạm: <strong>@Model.TenViPham</strong> không?
            </div>
        </div>

        <p><i class="bi bi-cash"></i> <strong>Mức phạt:</strong> @Model.MucPhat.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</p>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MaLoaiViPham" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger px-4 py-2 rounded-3 shadow-sm">
                    <i class="bi bi-trash3-fill me-1"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-3 shadow-sm">
                    <i class="bi bi-x-circle me-1"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Bootstrap Icons nếu chưa có -->
