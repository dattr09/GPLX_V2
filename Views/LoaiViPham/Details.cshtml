@model GPLX.Models.LoaiViPham

@{
    ViewData["Title"] = "Chi Tiết Loại Vi Phạm";
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    .btn-warning {
        background: linear-gradient(to right, #ffc107, #ffcc5c);
        border: none;
    }

    .btn-warning:hover {
        background: #e0a800;
    }

    .btn-secondary {
        background: linear-gradient(to right, #6c757d, #b0b0b0);
        border: none;
    }

    .btn-secondary:hover {
        background: #495057;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    h3 {
        color: #007bff;
    }

    .text-primary {
        color: #007bff !important;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
</style>

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 800px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-file-text-fill me-2"></i> @ViewData["Title"]
        </h2>

        <h3 class="mb-3 text-primary"><i class="bi bi-info-circle-fill"></i> Thông Tin Loại Vi Phạm</h3>

        <dl class="row">
            <dt class="col-sm-3"><i class="bi bi-hash"></i> Mã Loại Vi Phạm</dt>
            <dd class="col-sm-9">@Model.MaLoaiViPham</dd>

            <dt class="col-sm-3"><i class="bi bi-exclamation-circle-fill"></i> Tên Vi Phạm</dt>
            <dd class="col-sm-9">@Model.TenViPham</dd>

            <dt class="col-sm-3"><i class="bi bi-cash-stack"></i> Mức Phạt</dt>
            <dd class="col-sm-9">@string.Format("{0:#,##0} VNĐ", Model.MucPhat)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-3">
            <a href="@Url.Action("Edit", new { id = Model.MaLoaiViPham })" class="btn btn-warning px-4 py-2 rounded-3 shadow-sm me-2">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary px-4 py-2 rounded-3 shadow-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
