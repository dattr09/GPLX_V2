<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Lý GPLX</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GPLX.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-custom shadow-sm">
            <div class="container">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.webp" alt="GPLX" height="60" width="60"> Quản Lý GPLX
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="CongDan" asp-action="Index">Công Dân</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="DieuKienDatGplx" asp-action="Index">Điều Kiện GPLX</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="DkthiGplx" asp-action="Index">Đăng Ký Thi</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="GPLX" asp-action="Index">Giấy Phép Lái Xe</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="KetQuaThiGPLX" asp-action="Index">Kết Quả Thi</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="LoaiGPLX" asp-action="Index">Loại GPLX</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="LoaiViPham" asp-action="Index">Loại Vi Phạm</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="TrungTamSatHach" asp-action="Index">Trung Tâm Sát Hạch</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="ViPhamGplx" asp-action="Index">Vi Phạm GPLX</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        <div class="container">
            <p class="mb-0">&copy; 2025 - GPLX. All rights reserved.</p>
            <a asp-controller="Home" asp-action="Privacy" class="text-light">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
