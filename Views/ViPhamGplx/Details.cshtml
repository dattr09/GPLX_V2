@model GPLX.Models.ViPhamGplx

@{
    ViewData["Title"] = "Chi tiết Vi Phạm GPLX";
}

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 800px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-card-list me-2 text-primary"></i> Thông Tin Chi Tiết Vi Phạm GPLX
        </h2>

        <dl class="row">
            <dt class="col-sm-3"><i class="bi bi-hash"></i> Mã Vi Phạm:</dt>
            <dd class="col-sm-9 fw-bold">@Model.MaViPham</dd>

            <dt class="col-sm-3"><i class="bi bi-credit-card"></i> Mã GPLX:</dt>
            <dd class="col-sm-9">@Model.MaGplxNavigation.MaGplx</dd>

            <dt class="col-sm-3"><i class="bi bi-exclamation-circle"></i> Loại Vi Phạm:</dt>
            <dd class="col-sm-9">@Model.MaLoaiViPhamNavigation.TenViPham</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-event"></i> Ngày Vi Phạm:</dt>
            <dd class="col-sm-9">@Model.NgayViPham.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3"><i class="bi bi-check-circle"></i> Trạng Thái:</dt>
            <dd class="col-sm-9">
                @if (Model.TrangThai == "Đã xử lý")
                {
                    <span class="badge bg-success">Đã xử lý</span>
                }
                else if (Model.TrangThai == "Chưa xử lý")
                {
                    <span class="badge bg-warning text-dark">Chưa xử lý</span>
                }
                else
                {
                    <span class="badge bg-secondary">@Model.TrangThai</span>
                }
            </dd>
        </dl>

        <div class="text-center mt-4">
            <a href="@Url.Action("Edit", new { id = Model.MaViPham })" class="btn btn-warning px-4 py-2 rounded-3 shadow-sm me-2">
                <i class="bi bi-pencil-fill"></i> Chỉnh sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<!-- Hiệu ứng CSS -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    table td, table th {
        vertical-align: middle;
    }
</style>
