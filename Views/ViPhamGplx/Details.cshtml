@model GPLX.Models.ViPhamGplx

@{
    ViewData["Title"] = "Chi tiết Vi Phạm GPLX";
}

<h1><i class="bi bi-card-list"></i> @ViewData["Title"]</h1>

<div class="card shadow-sm p-4">
    <h4 class="text-primary"><i class="bi bi-info-circle"></i> Thông tin chi tiết</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3"><i class="bi bi-hash"></i> Mã Vi Phạm:</dt>
        <dd class="col-sm-9 fw-bold">@Model.MaViPham</dd>

        <dt class="col-sm-3"><i class="bi bi-credit-card"></i> Mã GPLX:</dt>
        <dd class="col-sm-9">@Model.MaGplxNavigation.MaGplx</dd>

        <dt class="col-sm-3"><i class="bi bi-exclamation-circle"></i> Loại Vi Phạm:</dt>
        <dd class="col-sm-9">@Model.MaLoaiViPhamNavigation.TenViPham</dd>

        <dt class="col-sm-3"><i class="bi bi-calendar-event"></i> Ngày Vi Phạm:</dt>
        <dd class="col-sm-9">@Model.NgayViPham.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3"><i class="bi bi-check-circle"></i> Trạng Thái:</dt>
        <dd class="col-sm-9">
            @if (Model.TrangThai == "Đã xử lý")
            {
                <span class="badge bg-success">Đã xử lý</span>
            }
            else if (Model.TrangThai == "Chưa xử lý")
            {
                <span class="badge bg-warning text-dark">Chưa xử lý</span>
            }
            else
            {
                <span class="badge bg-secondary">@Model.TrangThai</span>
            }
        </dd>
    </dl>

    <div class="d-flex justify-content-between">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
        <a href="@Url.Action("Edit", new { id = Model.MaViPham })" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
    </div>
</div>
