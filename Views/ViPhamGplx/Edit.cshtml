@model GPLX.Models.ViPhamGplx

@{
    ViewData["Title"] = "Sửa Vi Phạm GPLX";
}

<h1><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h1>

<div class="card shadow-sm p-4">
    <h4 class="text-primary"><i class="bi bi-exclamation-triangle"></i> Chỉnh sửa thông tin vi phạm</h4>
    <hr />
    @using (Html.BeginForm("Edit", "ViPhamGplx", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaViPham) <!-- THÊM DÒNG NÀY -->

    <div class="mb-3">
        <label for="MaGplx" class="form-label"><i class="bi bi-credit-card"></i> Mã GPLX</label>
        @Html.DropDownListFor(model => model.MaGplx, (SelectList)ViewData["MaGplx"], "Chọn GPLX", new { @class = "form-select" })
    </div>

    <div class="mb-3">
        <label for="MaLoaiViPham" class="form-label"><i class="bi bi-exclamation-circle"></i> Loại Vi Phạm</label>
        @Html.DropDownListFor(model => model.MaLoaiViPham, (SelectList)ViewData["MaLoaiViPham"], "Chọn Loại Vi Phạm", new { @class = "form-select" })
    </div>

    <div class="mb-3">
        <label for="NgayViPham" class="form-label"><i class="bi bi-calendar-event"></i> Ngày Vi Phạm</label>
        @Html.TextBoxFor(model => model.NgayViPham, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>

    <div class="mb-3">
        <label for="TrangThai" class="form-label"><i class="bi bi-check-circle"></i> Trạng Thái</label>
        @Html.TextBoxFor(model => model.TrangThai, new { @class = "form-control" })
    </div>

    <div class="d-flex justify-content-between">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Cập nhật
        </button>
    </div>
}

</div>
