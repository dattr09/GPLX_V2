@model GPLX.Models.ViPhamGplx

@{
    ViewData["Title"] = "Xóa Vi Phạm GPLX";
}

<h1><i class="bi bi-trash"></i> @ViewData["Title"]</h1>

<div class="card shadow-sm p-4">
    <h4 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa</h4>
    <p class="mb-3 text-muted">Bạn có chắc chắn muốn xóa Vi Phạm GPLX này không? Hành động này không thể hoàn tác.</p>
    
    <div class="alert alert-warning">
        <h5><i class="bi bi-info-circle"></i> Thông tin Vi Phạm GPLX</h5>
        <dl class="row">
            <dt class="col-sm-3">Mã Vi Phạm:</dt>
            <dd class="col-sm-9 fw-bold">@Model.MaViPham</dd>
            
            <dt class="col-sm-3">Mã GPLX:</dt>
            <dd class="col-sm-9">@Model.MaGplxNavigation.MaGplx</dd>
            
            <dt class="col-sm-3">Loại Vi Phạm:</dt>
            <dd class="col-sm-9">@Model.MaLoaiViPhamNavigation.TenViPham</dd>

            <dt class="col-sm-3">Ngày Vi Phạm:</dt>
            <dd class="col-sm-9">@Model.NgayViPham.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Trạng Thái:</dt>
            <dd class="col-sm-9">@Model.TrangThai</dd>
        </dl>
    </div>

    <form method="post">
        @Html.AntiForgeryToken()
        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash3"></i> Xóa
            </button>
        </div>
    </form>
</div>
