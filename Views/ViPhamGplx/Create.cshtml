@model GPLX.Models.ViPhamGplx

@{
    ViewData["Title"] = "Tạo mới Vi Phạm GPLX";
}

<h1><i class="bi bi-file-earmark-plus"></i> @ViewData["Title"]</h1>

<div class="card shadow-sm p-4">
    <h4 class="mb-3">Thông tin Vi Phạm</h4>
    <hr />

    @using (Html.BeginForm("Create", "ViPhamGplx", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label for="MaGplx" class="form-label">Mã GPLX</label>
            @Html.DropDownListFor(model => model.MaGplx, (SelectList)ViewData["MaGplx"], "Chọn GPLX", new { @class = "form-select" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.MaGplx)</span>
        </div>

        <div class="mb-3">
            <label for="MaLoaiViPham" class="form-label">Loại Vi Phạm</label>
            @Html.DropDownListFor(model => model.MaLoaiViPham, (SelectList)ViewData["MaLoaiViPham"], "Chọn Loại Vi Phạm", new { @class = "form-select" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.MaLoaiViPham)</span>
        </div>

        <div class="mb-3">
            <label for="NgayViPham" class="form-label">Ngày Vi Phạm</label>
            @Html.TextBoxFor(model => model.NgayViPham, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.NgayViPham)</span>
        </div>

        <div class="mb-3">
            <label for="TrangThai" class="form-label">Trạng Thái</label>
            @Html.TextBoxFor(model => model.TrangThai, new { @class = "form-control", placeholder = "Nhập trạng thái..." })
            <span class="text-danger">@Html.ValidationMessageFor(model => model.TrangThai)</span>
        </div>

        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Lưu
            </button>
        </div>
    }
</div>
