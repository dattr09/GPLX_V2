@model GPLX.Models.KetQuaThiGplx

@{
    ViewData["Title"] = "Chi tiết kết quả thi GPLX";
}

<div class="container mt-5">
    <div class="glass-card p-5 mx-auto" style="max-width: 800px;">
        <h2 class="text-center text-dark mb-4">
            <i class="bi bi-journal-check me-2 text-success"></i> Thông Tin Chi Tiết Kết Quả Thi GPLX
        </h2>

        <table class="table table-bordered table-striped shadow-sm rounded-3">
            <tbody>
                <tr>
                    <th class="col-sm-4 text-nowrap">Mã Kết Quả</th>
                    <td>@Model.MaKetQua</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Mã Đăng Ký</th>
                    <td>@Model.MaDkthiGplx</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Điểm Lý Thuyết</th>
                    <td>@Model.DiemLyThuyet</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Điểm Thực Hành</th>
                    <td>@Model.DiemThucHanh</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Điểm Mô Phỏng</th>
                    <td>@(Model.DiemMoPhong.HasValue ? Model.DiemMoPhong.Value : "N/A")</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Điểm Đường Trường</th>
                    <td>@(Model.DiemDuongTruong.HasValue ? Model.DiemDuongTruong.Value : "N/A")</td>
                </tr>
                <tr>
                    <th class="text-nowrap">Kết Quả</th>
                    <td>
                        <span class="badge @(Model.KetQua == "Đậu" ? "bg-success" : "bg-danger")">
                            @Model.KetQua
                        </span>
                    </td>
                </tr>
                <tr>
                    <th class="text-nowrap">Ghi Chú</th>
                    <td>@(string.IsNullOrEmpty(Model.GhiChu) ? "Không có" : Model.GhiChu)</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="@Url.Action("Edit", new { id = Model.MaKetQua })" class="btn btn-warning px-4 py-2 rounded-3 shadow-sm me-2">
                <i class="bi bi-pencil-fill"></i> Cập Nhật
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-dark px-4 py-2 rounded-3 shadow-sm">
                <i class="bi bi-arrow-left-circle"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<!-- Hiệu ứng CSS -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation: fadeInUp 0.6s ease;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    body {
        background: linear-gradient(to right, #eef7f8, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    table td, table th {
        vertical-align: middle;
    }
</style>
