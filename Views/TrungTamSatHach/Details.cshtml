@model GPLX.Models.TrungTamSatHach

@{
    ViewData["Title"] = "Chi tiết Trung Tâm Sát Hạch";
}

<h1><i class="bi bi-building"></i> @ViewData["Title"]</h1>

<div class="card shadow-lg p-4 mt-3">
    <h4 class="text-primary"><i class="bi bi-info-circle"></i> Thông tin trung tâm</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3 fw-bold"><i class="bi bi-house-door"></i> Tên Trung Tâm:</dt>
        <dd class="col-sm-9">@Model.TenTrungTam</dd>

        <dt class="col-sm-3 fw-bold"><i class="bi bi-geo-alt"></i> Địa Chỉ:</dt>
        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.DiaChi) ? "Chưa cập nhật" : Model.DiaChi)</dd>

        <dt class="col-sm-3 fw-bold"><i class="bi bi-telephone"></i> Số Điện Thoại:</dt>
        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.SoDt) ? "Chưa cập nhật" : Model.SoDt)</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MaTtsh" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>
