@model GPLX.Models.TrungTamSatHach

@{
    ViewData["Title"] = "Chỉnh sửa Trung Tâm Sát Hạch";
}

<h1><i class="bi bi-pencil-square"></i> @ViewData["Title"]</h1>

<div class="card shadow-lg p-4 mt-3">
    <form asp-action="Edit">
        <input type="hidden" asp-for="MaTtsh" />

        <div class="mb-3">
            <label asp-for="TenTrungTam" class="form-label fw-bold">
                <i class="bi bi-building"></i> Tên Trung Tâm
            </label>
            <input asp-for="TenTrungTam" class="form-control" required />
            <span asp-validation-for="TenTrungTam" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DiaChi" class="form-label fw-bold">
                <i class="bi bi-geo-alt"></i> Địa Chỉ
            </label>
            <input asp-for="DiaChi" class="form-control" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SoDt" class="form-label fw-bold">
                <i class="bi bi-telephone"></i> Số Điện Thoại
            </label>
            <input asp-for="SoDt" class="form-control" />
            <span asp-validation-for="SoDt" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Lưu thay đổi
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
