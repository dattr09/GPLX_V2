@model GPLX.Models.TrungTamSatHach

@{
    ViewData["Title"] = "Tạo mới Trung Tâm Sát Hạch";
}

<h1><i class="bi bi-building"></i> @ViewData["Title"]</h1>

<div class="card shadow-lg p-4">
    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="TenTrungTam" class="form-label fw-bold">Tên Trung Tâm</label>
            <input asp-for="TenTrungTam" class="form-control" required />
            <span asp-validation-for="TenTrungTam" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DiaChi" class="form-label fw-bold">Địa Chỉ</label>
            <input asp-for="DiaChi" class="form-control" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SoDt" class="form-label fw-bold">Số Điện Thoại</label>
            <input asp-for="SoDt" class="form-control" pattern="^(\+84|0)[1-9][0-9]{8}$" title="Nhập số điện thoại hợp lệ (10 chữ số)" />
            <span asp-validation-for="SoDt" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> Lưu
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
